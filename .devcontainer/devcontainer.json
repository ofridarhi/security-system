{
  "name": "Security System Dev Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [6379, 27017, 5432],
  "postCreateCommand": "docker-compose up -d && (cd ingestion-service && go mod tidy) && pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "golang.go",
        "ms-azuretools.vscode-docker",
        "mongodb.mongodb-vscode"
      ]
    }
  }
}